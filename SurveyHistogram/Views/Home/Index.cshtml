                                <div class='step-button'>
                                    <button type='button' class='btn btn-default prevBtn' id='prevBtn'>上一步</button>
                                    <button type='submit' class='btn btn-default nextBtn' id='nextBtn'>下一步</button>
                                </div>
                            </div>                            
                        </form>
                    </div>
                    <!-- /.box-body -->
                    <div class="box-footer">

                    </div>
                </div>
            </div>
            <div id="page2" class="stepPage">
                <!-- 地质  -->
                <div class="box box-default">
                    <div class="box-header with-border">
                        <h3 class="box-title">地质</h3>
                    </div>
                    <!-- /.box-header -->
                    <div class="box-body">
                        <div class="col-lg-10 col-lg-offset-1">
                            <form id="drillStrataForm" class="form-horizontal" role="form"  action="~/Home/SetDrillStrataInfo" method="post">
                                <fieldset>
                                    <legend>添加地层</legend>
                                    <div class="form-group">
                                        <label class="col-sm-2 control-label">地层年代</label>
