                                        <div class="col-sm-4">
                                            <input class="form-control" name="bottonElevation" type="text" placeholder="必填项" />
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-sm-2 control-label">地层描述</label>
                                        <div class="col-sm-4">
                                            <input class="form-control" id="strataDescribe" style="width: 100%;" placeholder="请输入..." data-toggle="modal" data-target="#modal-dicengmiaoshu">
                                        </div>
                                        <label class="col-sm-2 control-label">图例号</label>
                                        <div class="col-sm-4">
                                            <input class="form-control" name="legendName" id="legendName" style="width: 100%;" data-toggle="modal" data-target="#modal-tulihao">
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-sm-2 control-label">图例说明</label>
                                        <div class="col-sm-4">
                                            <select class="form-control select2" name="legendExplation" style="width: 100%;">
                                                <option selected="selected">该项需要图示...</option>
                                            </select>
                                        </div>
                                        <label class="col-sm-2 control-label">接触关系</label>
                                        <div class="col-sm-4">
                                            <select class="form-control select2" name="contactRelation" style="width: 100%;">
                                                <option selected="selected">渐变关系</option>
                                                <option>侵入关系</option>
                                            </select>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-sm-2 control-label" >岩芯采取</label>
                                        <div class="col-sm-4">
                                            <input class="form-control" name="coreTake" type="text" placeholder="请输入..." />
                                        </div>
                                        <label class="col-sm-2 control-label">含水量</label>
                                        <div class="col-sm-4">
                                            <input class="form-control" name="waterInclude" type="text" placeholder="请输入..." />
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-sm-2 control-label">备注</label>
                                        <div class="col-sm-10">
                                            <input class="form-control" name="remarks" type="text" placeholder="请输入..." />
                                        </div>
                                    </div>
                                </fieldset>
                                <button type='submit' class='btn btn-primary pull-right' id='addDrillStrata'>添加</button>                               
                            </form>
                        </div>
                    </div>
                    <!-- /.box-body -->
                    <div class="box-footer">

                    </div>
                </div>
                <div class="box box-default">
                    <div class="box-header">
                        <h3 class="box-title">地层预览</h3>
                        <div class="box-tools">
                            <div class="input-group input-group-sm" style="width: 150px;">
                                
                            </div>
                        </div>
                    </div>
                    <!-- /.box-header -->
                    <div class="box-body table-responsive no-padding">
                        <table id="drillStrataTable" class="table table-hover">
                            <tr class="success">
                                <th width="">序号</th>
                                <th>地层代号</th>
                                <th>开始深度</th>
                                <th>结束深度</th>
                                <th>厚度</th>
                                <th>层底标高</th>
                                <th>地层描述</th>
                                <th>图例号</th>
                                <th>图例说明</th>
                                <th>接触关系</th>
                                <th>岩芯采取</th>
                                <th>含水量</th>
                                <th>备注</th>
                            </tr>
                        </table>
                    </div>
                    <!-- /.box-body -->
                </div>
                <!-- /.box -->
                <div class='step-button' style="margin-top: 50px;">
                    <button type='button' class='btn btn-default prevBtn' id='prevBtn'>上一步</button>
                    <button type='submit' class='submitStrataAllInfo btn btn-default nextBtn' id='nextBtn'>下一步</button>
                </div>
            </div>
            <div id="page3" class="stepPage">
                <!-- 类型  -->
                <div class="box box-default">
                    <div class="box-header with-border">
                        <h3 class="box-title">类型</h3>
                    </div>
                    <!-- /.box-header -->
                    <div class="box-body">
                        <div class="col-lg-10 col-lg-offset-1">
                            <form id="drillStrataForm" class="form-horizontal" role="form">
                                <fieldset>
                                    <legend>柱状图成图类型</legend>
                                    <div class="form-group">
                                        <label class="col-sm-2 control-label">钻孔类型</label>
                                        <div class="col-sm-6">
                                            <select class="form-control select2" name="legendExplation" style="width: 100%;">
                                                <option selected="selected">岩石钻孔.</option>
                                                <option>声波钻孔</option>
                                            </select>
                                        </div>
                                    </div>
                                </fieldset>
                                <div class='step-button'>
                                    <button type='button' class='btn btn-default prevBtn' id='prevBtn'>上一步</button>
                                    <button type='submit' class='btn btn-default nextBtn' id='nextBtn'>下一步</button>
                                </div>
                            </form>
                        </div>
                    </div>
                    <!-- /.box-body -->
                    <div class="box-footer">

                    </div>
                </div>
            </div>
            <div id="page4" class="stepPage">
                <!-- 比例  -->
                <div class="box box-default">
                    <div class="box-header with-border">
                        <h3 class="box-title">比例</h3>
                    </div>
                    <!-- /.box-header -->
                    <div class="box-body">
                        <div class="col-lg-10 col-lg-offset-1">
                            <form id="drillStrataForm" class="form-horizontal" role="form">
                                <fieldset>
                                    <legend>柱状图比例尺</legend>
                                    <div class="form-group">
                                        <label class="col-sm-2 control-label">比例尺</label>
                                        <div class="col-sm-10">
                                            <input class="form-control" id="drillScale" name="drillScale" style="width: 100%;" placeholder="必填项">
                                        </div>
                                    </div>
                                </fieldset>
                                <div class='step-button'>
                                    <button type='button' class='btn btn-default prevBtn' id='prevBtn'>上一步</button>
                                    <button type='submit' class='btn btn-default nextBtn' id='nextBtn'>下一步</button>
                                </div>
                            </form>
                        </div>
                    </div>
                    <!-- /.box-body -->
                    <div class="box-footer">
                        <button type="submit" class="btn btn-primary" id="">成图</button>
                    </div>
                </div>
            </div>
            <div id="page5" class="stepPage">
                <!-- 预览  -->
                <div class="box box-default">
                    <div class="box-header with-border">
                        <h3 class="box-title">预览</h3>
                    </div>
                    <!-- /.box-header -->
                    <div class="box-body">
                        <div class="col-lg-10 col-lg-offset-1">
                            
                        </div>
                    </div>
                    <!-- /.box-body -->
                    <div class="box-footer">
                        <div class='step-button' style="margin-top: 50px;">
                            <button type='button' class='btn btn-default prevBtn' id='prevBtn'>上一步</button>
                            <button type='button' class='btn btn-default nextBtn' id='nextBtn'>下一步</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!--弹出层组件-->
