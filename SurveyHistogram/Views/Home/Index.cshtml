                                        <div class="col-lg-6">
                                            <input class="form-control" name="waterDepth" type="text" placeholder="请输入..." />
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-lg-2 control-label">建基面高程</label>
                                        <div class="col-lg-6">
