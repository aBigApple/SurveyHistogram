                                                <option selected="selected">test</option>
                                                <option>该项需要计算</option>
                                            </select>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-lg-2 control-label">单轴抗压强</label>
                                        <div class="col-lg-6">
                                            <input class="form-control" name="uniaxialPressure" type="text" placeholder="请输入..." />
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-lg-2 control-label">模型</label>
                                        <div class="col-lg-6">
                                            <select class="form-control select2" name="model" style="width: 100%;">
                                                <option selected="selected">Model1</option>
                                                <option>Model2</option>
                                            </select>
                                        </div>
