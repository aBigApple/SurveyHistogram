                                    <div class="form-group">
                                        <label class="col-sm-2 control-label">开始深度</label>
                                        <div class="col-sm-4">
                                            <input class="form-control" name="strataDepth"  type="text" placeholder="必填项" />
                                        </div>
                                        <label class="col-sm-2 control-label">结束深度</label>
                                        <div class="col-sm-4">
                                            <input class="form-control" name="endDepth" type="text" placeholder="必填项" />
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        
                                    </div>
                                    <div class="form-group">
                                        <label class="col-sm-2 control-label">厚度</label>
                                        <div class="col-sm-4">
                                            <input class="form-control" name="thinckness" type="text" placeholder="必填项" />
                                        </div>
