@{
    ViewBag.Title = "岩石钻孔成图";
}

<!-- Content Header (Page header) -->
<section class="content-header">
    <h1>
        岩石钻孔
        <small>Rock drilling</small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
        <li class="active">Rock drilling</li>
    </ol>
</section>
<!-- Content (Page content) -->
<section class="content">
    <!-- 菜单及分页容器-->
    <div class="stepCont" style="overflow: hidden;">
        <!-- 菜单导航显示-->
        <div class='ystep-container ystep-lg ystep-blue'></div>
        <!-- 分页容器-->
        <div class="pageCont">
            <div id="page1" class="">
                <!-- 基本  -->
                <div class="box box-default">
                    <div class="box-header with-border">
                        <h3 class="box-title">基本信息</h3>
                    </div>
                    <!-- /.box-header -->
                    <div class="box-body"> 
                        <form id="drillBasicForm" class="form-horizontal" role="form" method="post" action="~/Home/">
                            <div  class="col-lg-8 col-lg-offset-2">
                                <fieldset>
                                    <legend>项目信息</legend>
                                    <div class="form-group">
                                        <label class="col-lg-2 control-label">工程名称</label>
                                        <div class="col-lg-8">
                                            <select class="form-control select2" name="projectName" style="width: 100%;">
                                                <option selected="selected">马家湾隧道</option>
                                                <option>马家湾隧道</option>
                                                <option>马家湾隧道</option>
                                                <option>马家湾隧道</option>
                                            </select>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-lg-2 control-label">项目名称</label>
                                        <div class="col-lg-8">
                                            <input type="text" class="form-control" name="programtName" placeholder="必填项">
                                        </div>
                                    </div>
                                    <hr />                                   
                                </fieldset>
                                <fieldset>
                                    <legend>钻孔信息</legend>
